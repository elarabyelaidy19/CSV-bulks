<div class="max-w-2xl mx-auto p-4">
  <%= form_with url: search_by_actor_movies_path, method: :get, class: "flex gap-4", data: { turbo_frame: "search_results" } do |f| %>
    <div class="flex-1">
      <%= f.text_field :actor_name, 
          class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
          placeholder: "Enter actor name...",
          autocomplete: "off" %>
    </div>
    <%= f.submit "Search", 
        class: "px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  <% end %>
</div> 